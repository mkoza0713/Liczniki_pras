void keySignPcf() {
  int16_t index = keyPad.getKey();
  char znak3;
  int16_t znak2;
  switch(index){  //konwersja na znak
	case 0:
  	znak3='1';
	break;
	case 1:
  	znak3='2';
	break;
	case 2:
  	znak3='3';
	break;
	case 4:
