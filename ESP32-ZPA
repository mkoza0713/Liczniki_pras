	break;
	case 13:
  	znak3='0';
	break;
	case 14:
  	znak3='#';
	break;
  }
  switch (znak3) {  //konwersja na liczbe
	case '1':
  	znak2= 1;
	case '2':
  	znak2=  2;
	case '3':
  	znak2=  3;
	case '4':
  	znak2=  4;
